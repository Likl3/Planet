<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="26dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#fff5f4f3"
    tools:context="com.planet.likunlang.planet.TaskDetailsPage">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:hint="输入任务内容"
        android:gravity="top"
        android:id="@+id/edit_text_target_details"
        android:background="@drawable/task_details_view_shape"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff5f4f3"
        android:layout_below="@+id/edit_text_target_details"
        android:layout_centerHorizontal="true">

        <view.MyView
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:background="#23000000" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">


            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="结束时间"
                android:textColor="#ab000000"
                android:gravity="center"
                android:background="#ffffff"
                android:id="@+id/textView2" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:inputType="date"
                    android:ems="10"
                    android:hint="date"
                    android:background="@drawable/task_details_view_shape"
                    android:id="@+id/edit_text_date"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:inputType="time"
                    android:ems="10"
                    android:hint="time"
                    android:id="@+id/edit_text_time"
                    android:background="@drawable/task_details_view_shape"
                    android:layout_weight="1" />
            </LinearLayout>



        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff5f4f3"
            android:layout_gravity="center_horizontal">


            <Button
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:text="OK"
                android:textColor="#ffffff"
                android:id="@+id/btn_ok"
                android:background="@drawable/ok_button_shape"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>
